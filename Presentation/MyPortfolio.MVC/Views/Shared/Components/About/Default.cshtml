@model AboutViewModel

@if (Model?.AboutVM != null)
{
    <section id="about" class="about">
        <div class="section-heading text-center">
            <h2>hakkımda</h2>
        </div>

        <div class="container">
            <div class="about-content">
                <div class="row">

                    <!-- LEFT -->
                    <div class="col-sm-6">
                        <div class="single-about-txt">

                            @* TITLE / FIELD *@
                            @if (!string.IsNullOrWhiteSpace(Model.AboutVM.Title))
                            {
                                <h3>@Model.AboutVM.Title</h3>
                            }

                            @* DESCRIPTION *@
                            @if (!string.IsNullOrWhiteSpace(Model.AboutVM.Description))
                            {
                                <p>@Model.AboutVM.Description</p>
                            }

                            <div class="row">

                                @* PHONE *@
                                @if (!string.IsNullOrWhiteSpace(Model.AboutVM.PhoneNumber))
                                {
                                    <div class="col-sm-4">
                                        <div class="single-about-add-info">
                                            <h3>phone</h3>
                                            <p>@Model.AboutVM.PhoneNumber</p>
                                        </div>
                                    </div>
                                }

                                @* EMAIL *@
                                @if (!string.IsNullOrWhiteSpace(Model.AboutVM.Email))
                                {
                                    <div class="col-sm-4">
                                        <div class="single-about-add-info">
                                            <h3>email</h3>
                                            <p>
                                                <a href="mailto:@Model.AboutVM.Email">
                                                    @Model.AboutVM.Email
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                }

                                @* WEBSITE *@
                                @if (!string.IsNullOrWhiteSpace(Model.AboutVM.WebSite))
                                {
                                    <div class="col-sm-4">
                                        <div class="single-about-add-info">
                                            <h3>website</h3>
                                            <p>
                                                <a href="@Model.AboutVM.WebSite" target="_blank">
                                                    @Model.AboutVM.WebSite
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>

                    <!-- RIGHT -->
                    <div class="col-sm-offset-1 col-sm-5">
                        <div class="single-about-img">

                            @* PROFILE IMAGE *@
                            <img src="@Model.AboutVM.ImagePath" alt="profile_image" />

                            @* SOCIAL MEDIA *@
                            @if (Model.SocialMediaAccountsVM?.Any() == true)
                            {
                                <div class="about-list-icon">
                                    <ul>
                                        @foreach (var item in Model.SocialMediaAccountsVM)
                                        {
                                            if (!string.IsNullOrWhiteSpace(item.Url) &&
                                            !string.IsNullOrWhiteSpace(item.IconCode))
                                            {
                                                <li>
                                                    <a href="@item.Url" target="_blank">
                                                        <i class="@item.IconCode" aria-hidden="true"></i>
                                                    </a>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
}
