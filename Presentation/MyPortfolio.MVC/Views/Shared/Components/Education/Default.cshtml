@using MyPortfolio.Application.Features.Queries.EducationQueries.GetAllEducation
@model GetAllEducationQueryResponse

<section id="education" class="education">
    <div class="section-heading text-center">
        <h2>Eğitim</h2>
    </div>
    <div class="container">
        <div class="education-horizontal-timeline">
            <div class="row">
                @if (Model.EducationDtoList != null && Model.EducationDtoList.Any())
                {
                    @foreach (var item in Model.EducationDtoList)
                    {
                        <div class="col-sm-4">
                            <div class="single-horizontal-timeline">
                                <div class="experience-time">
                                    <h2>
                                        @item.StartDate!.Value.Year - @(string.IsNullOrEmpty(item.EndDate.ToString()) ? "Halen" : item.EndDate!.Value.Year)
                                    </h2>
                                    <h3>@item.Department</h3>
                                </div>
                                <div class="timeline-horizontal-border">
                                    <i class="fa fa-circle" aria-hidden="true"></i>
                                    <span class="single-timeline-horizontal"></span>
                                </div>
                                <div class="timeline">
                                    <div class="timeline-content">
                                        <h4 class="title">
                                            @item.University
                                        </h4>
                                        <h5>@item.Location</h5>
                                        <p class="description">
                                            @item.Description
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

</section>
