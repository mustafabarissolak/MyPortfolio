@using MyPortfolio.Application.Features.Queries.WelcomeAreaQueries.GetSingleWelcomeArea
@model GetSingleWelcomeAreaQueryResponse

@{
    ViewData["Title"] = "Karşılama Alanı";
}

<div class="w-100">
    <h5 class="text-center mb-4">Karşılama Alanı</h5>

    <div class="bg-secondary rounded p-4">

        @if (Model.WelcomeAreaDto is not null)
        {
            <table class="table table-hover align-middle w-100">
                <thead>
                    <tr>
                        <th style="width:10%">Üst Başlık</th>
                        <th style="width:10%">Alt Başlık</th>
                        <th style="width:10%">CV</th>
                        <th style="width:8%">Oluşturma</th>
                        <th style="width:8%">Güncelleme</th>
                        <th style="width:9%">İşlem</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>@Model.WelcomeAreaDto.TopHeading</td>
                        <td>@Model.WelcomeAreaDto.SubHeading</td>
                        <td><a href="@Model.WelcomeAreaDto.CvUrl" download>İndir</a></td>
                        <td>@Model.WelcomeAreaDto.CreateDate?.ToShortDateString()</td>
                        <td>@Model.WelcomeAreaDto.UpdateDate?.ToShortDateString()</td>

                        <td class="text-center">
                            <a asp-area="Dashboard" asp-controller="WelcomeArea" asp-action="Edit" asp-route-id="@Model.WelcomeAreaDto.Id"
                               class="btn btn-outline-light btn-sm mb-1 w-100">
                                Düzenle
                            </a>

                            <form asp-area="Dashboard" asp-controller="WelcomeArea" asp-action="Delete" asp-route-id="@Model.WelcomeAreaDto.Id"
                                  method="post" onsubmit="return confirm('Silmek istiyor musunuz?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                    Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>

            @if (!string.IsNullOrEmpty(Model.WelcomeAreaDto.ImagePath))
            {
                <div class="text-center mt-4">
                    <img src="@Model.WelcomeAreaDto.ImagePath"
                         class="img-fluid rounded shadow"
                         style="max-height:300px; object-fit:contain;" />
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.WelcomeAreaDto.CvUrl))
            {
                <div class="text-center mt-4">
                    <img src=""
                         class="img-fluid rounded shadow"
                         style="max-height:300px; object-fit:contain;" />
                </div>
            }
        }
        else
        {
            <a asp-area="Dashboard" asp-controller="WelcomeArea" asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-plus-circle"></i>
            </a>
        }

    </div>
</div>
