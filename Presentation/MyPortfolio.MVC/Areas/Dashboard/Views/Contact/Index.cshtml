@using MyPortfolio.Application.Features.Queries.ContactQueries.GetAllContact
@model GetAllContactQueryResponse
@{
    ViewData["Title"] = "Mesajlar";
    byte sayac = 1;
}
<div class="w-100 mx-auto">
    <h6 class="text-center">Mesajlar</h6>
    <div class="bg-secondary rounded h-100 p-4">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Gönderen</th>
                    <th scope="col">Email</th>
                    <th scope="col">Konu</th>
                    <th scope="col">Mesaj</th>
                    <th scope="col">Tarih</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            @if (Model.ContactDtoList is not null && Model.ContactDtoList.Any())
            {
                @foreach (var item in Model.ContactDtoList)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@sayac</th>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Subject</td>
                            <td>@item.Message</td>
                            <td>@item.SendDate</td>
                            <td>
                                <form asp-controller="Contact"
                                      asp-action="Delete"
                                      asp-route-id="@item.Id"
                                      method="post"
                                      onsubmit="return confirm('Bu beceriyi silmek istiyor musunuz?');"
                                      style="display:inline">
                                    <button type="submit" class="btn btn-outline-danger m-2">
                                        Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                    sayac++;
                }
            }
        </table>
    </div>
</div>
