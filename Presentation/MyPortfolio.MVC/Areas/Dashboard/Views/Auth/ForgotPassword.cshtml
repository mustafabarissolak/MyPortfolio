@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Şifremi Unuttum";
}
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <h3 class="text-primary">
                        <i class="fa fa-user-edit me-2"></i>DarkPan
                    </h3>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Kullanıcı Adı</label>
                </div>
                <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Şifre Sıfırlama Bağlantısı Gönder</button>
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <div class="form-check"></div>
                    <a asp-action="Login">Giriş Yap</a>
                </div>
                <a asp-action="ForgotPassword">ForgotPassword</a>
                <br />
                <a asp-action="ResetPassword">ResetPassword</a>
                <br />
                <a asp-action="Login">Login</a>
            </div>
        </div>
    </div>
</div>
