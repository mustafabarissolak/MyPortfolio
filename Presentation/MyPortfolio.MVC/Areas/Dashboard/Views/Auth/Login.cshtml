@model UserLoginVM
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Giriş";
}
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <h3 class="text-primary">
                        <i class="fa fa-user-edit me-2"></i>DarkPan
                    </h3>
                </div>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success text-center mt-3">
                        @TempData["Message"]
                    </div>
                }
                <form method="post" asp-action="Login">
                    @Html.AntiForgeryToken()

                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control" id="floatingInput" required>
                        <label for="floatingInput">Kullanıcı Adı:</label>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" required>
                        <label for="floatingPassword">Şifre:</label>
                    </div>
                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Giriş Yap</button>
                </form>
                <div class="text-danger text-center mt-3">@Html.ValidationSummary(false)</div>

                <div class="d-flex align-items-center justify-content-between mb-4">
                    <div class="form-check"></div>
                    <a asp-action="ForgotPassword">Şifremi Unuttum</a>
                </div>
            </div>
        </div>
    </div>
</div>
