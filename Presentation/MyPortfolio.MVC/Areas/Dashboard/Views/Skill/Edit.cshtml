@using MyPortfolio.Application.Features.Commands.SkillCommand.UpdateSkill
@model UpdateSkillCommandRequest

@{
    ViewData["Title"] = "Edit Skill";
}

<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Yeni Beceri Ekle</h6>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="C#" />
                <label asp-for="Name">Beceri Adı</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Value" type="number" class="form-control" placeholder="85" />
                <label asp-for="Value">Beceri Seviyesi (%)</label>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-outline-success m-2">Kaydet</button>
            <a asp-action="Index" class="btn btn-outline-light m-2">Geri Dön</a>

        </form>
    </div>
</div>

