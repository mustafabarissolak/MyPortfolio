@using MyPortfolio.Application.Features.Queries.SkillQueries.GetAllSkills
@model GetAllSkillsQueryResponse

@{
    ViewData["Title"] = "Skills";
    byte sayac = 1;
}

<a asp-controller="Skill"
   asp-action="Create"
   class="btn btn-outline-success">
    <i class="bi bi-plus-circle"></i>
</a>
<div class="w-50 mx-auto">
    <h6 class="text-center">Beceriler</h6>
    <div class="bg-secondary rounded h-100 p-4">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Ad</th>
                    <th scope="col">%</th>
                    <th scope="col">Oluşturma Tarihi</th>
                    <th scope="col">Güncellenme Tarihi</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            @if (Model.SkillDtos is not null && Model.SkillDtos.Any())
            {
                @foreach (var skill in Model.SkillDtos)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@sayac</th>
                            <td>@skill.Name</td>
                            <td>@skill.Value</td>
                            <td>@skill.CreateDate?.ToShortDateString()</td>
                            <td>@skill.UpdateDate?.ToShortDateString()</td>
                            <td>
                                <a asp-controller="Skill"
                                   asp-action="Edit"
                                   asp-route-id="@skill.Id"
                                   class="btn btn-outline-light m-2">
                                    Düzenle
                                </a>
                            </td>
                            <td>
                                <form asp-controller="Skill"
                                      asp-action="Delete"
                                      asp-route-id="@skill.Id"
                                      method="post"
                                      onsubmit="return confirm('Bu beceriyi silmek istiyor musunuz?');"
                                      style="display:inline">
                                    <button type="submit" class="btn btn-outline-danger m-2">
                                        Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                    sayac++;
                }
            }

        </table>
    </div>
</div>
