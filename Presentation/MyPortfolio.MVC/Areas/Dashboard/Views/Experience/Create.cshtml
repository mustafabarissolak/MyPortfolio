@using MyPortfolio.Application.Features.Commands.ExperienceCommands.CreateExperience
@model CreateExperienceCommandRequest

@{
    ViewData["Title"] = "Yeni Deneyim Ekle";
}

<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Yeni Deneyim Ekle</h6>

        <form asp-action="Create" method="post">

            <div class="form-floating mb-3">
                <input asp-for="CompanyName" class="form-control" />
                <label asp-for="CompanyName">Şirket</label>
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Location" class="form-control" />
                <label asp-for="Location">Konum</label>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Description"
                          class="form-control"
                          style="height: 150px"></textarea>
                <label asp-for="Description">Açıklama</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="StartDate"
                       type="date"
                       class="form-control" required />
                <label asp-for="StartDate">Başlangıç Tarihi</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="EndDate"
                       type="date"
                       class="form-control" />
                <label asp-for="EndDate">Bitiş Tarihi</label>
            </div>

            <button type="submit" class="btn btn-outline-success m-2">Kaydet</button>
            <a asp-action="Index" class="btn btn-outline-light m-2">Geri Dön</a>

        </form>
    </div>
</div>